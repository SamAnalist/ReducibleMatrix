def fact(matriz_A):
    n = matriz_A.shape[0]

    # Generar una matriz aleatoria B
    matriz_B = np.random.rand(n, n)

    # Calcular la matriz C como la divisi칩n elemento a elemento de A y B
    matriz_C = np.divide(matriz_A, matriz_B)

    return matriz_B, matriz_C
