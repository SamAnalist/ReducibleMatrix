#funcion calcular la inversa de una matriz
def traza(m):
    #Funcion que calcula la traza de una matriz
    traza = 0
    for i in range(len(m)):
        for j in range(i, i+1):
            traza += m[i][j]
    return traza


def triang3x3(a):
    #funcion que triangula una matriz 3x3
    m = np.array(a)
    k = m[1][0] / m[0][0]
    t = m[2][0] / m[0][0]
    m[1][0] = -k * m[0][0] + m[1][0]
    m[1][1] = -k * m[0][1] + m[1][1]
    m[1][2] = -k * m[0][2] + m[1][2]
    m[2][0] = -t * m[0][0] + m[2][0]
    m[2][1] = -t * m[0][1] + m[2][1]
    m[2][2] = -t * m[0][2] + m[2][2]
    x = m[2][1] / m[1][1]
    m[2][1] = -x * m[1][1] + m[2][1]
    m[2][2] = -x * m[1][2] + m[2][2]
    return m
def traspuesta(m):
    return np.transpose(m)
